!!!
%html
  %head
    %meta{:'http-equiv' => 'Content-Type', content: 'text/html; charset=UTF-8'}
    %meta{:'http-equiv' => 'X-UA-Compatible', content: 'IE=edge, chrome=1'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no'}
    %meta{name: 'renderer', content: 'webkit'}
    %meta{name: 'action-cable-url', content: '/cable'}

    %title 企业 IM 核心服务

    = stylesheet_link_tag 'application', media: 'all', :'data-turbolinks-track' => :reload
    = javascript_include_tag 'application', :'data-turbolinks-track' => :reload

    = csrf_meta_tags

  %body
    :ruby
      content_component = {
        name: @component_name,
        data: @component_data || {}
      }

      current_user_info = current_user.blank? ? {} : {
        user_id: current_user.id.to_s,
        member_id: current_user.member.id.to_s,
        email: current_user.email,
        name: current_user.member.name
      }

    :javascript
      window.current_user = #{current_user_info.to_json}
      window.content_component = #{content_component.to_json}

    = react_component 'AppLayout'